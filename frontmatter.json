{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.publicFolder": "public",
  "frontMatter.snippets.wrapper.enabled": false,
  "frontMatter.content.pageFolders": [
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/blog"
    },
    {
      "title": "page",
      "path": "[[workspace]]/src/pages"
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "blog",
      "defaultFileName": "blog-post",
      "pageBundle": false,
      "previewPath": "",
      "filePrefix": null,
      "clearEmpty": false,
      "fileType": "mdx",
      "fields": [
        {
          "title": "Author",
          "name": "author",
          "type": "string",
          "default": "FDSEVEN"
        },
        {
          "title": "Publishing date",
          "name": "pubDatetime",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Last modified date",
          "name": "lastmod",
          "type": "datetime",
          "isModifiedDate": true
        },
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "single": true
        },
        {
          "title": "Slug",
          "name": "postSlug",
          "type": "string",
          "default": "slugified title"
        },
        {
          "title": "Featured",
          "name": "isFeatured",
          "type": "boolean",
          "default": false
        },
        {
          "title": "Draft",
          "name": "draft",
          "type": "boolean",
          "default": false
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "list",
          "default": [
            "post"
          ]
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string",
          "default": "post description"
        },
        {
          "title": "Content preview",
          "name": "ogImage",
          "type": "image",
          "isPreviewImage": true,
          "default": ""
        },
        {
          "title": "lastmod",
          "name": "lastmod",
          "type": "datetime"
        }
      ]
    },
    {
      "name": "page",
      "defaultFileName": "page-index",
      "pageBundle": false,
      "previewPath": "",
      "filePrefix": null,
      "clearEmpty": false,
      "fileType": "mdx",
      "fields": [
        {
          "title": "Author",
          "name": "author",
          "type": "string",
          "default": "FDSEVEN"
        },
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "title": "Layout",
          "name": "layout",
          "type": "string",
          "single": true,
          "default": "../layouts/AboutLayout.astro"
        }
      ]
    }
  ],
  "frontMatter.website.host": "https://pesmania.web.id",
  "frontMatter.content.snippets": {
    "Figure": {
      "description": "Figure for image content",
      "body": "<Figure title=\"[[title]]\" src=\"[[&mediaUrl]]\" />",
      "isMediaSnippet": true
    },
    "Link Button": {
      "description": "Link style button",
      "body": [
        "<LinkButton ",
        "title=\"[[title]]\" ",
        "href=\"[[&url]]\" ",
        "className=\"[&>p]:!m-0 [&>p]:!px-4 [&>p]:!text-skin-inverted [&>p:hover]:!text-skin-accent [&>p]:bg-skin-accent [&>p]:rounded-full !decoration-transparent [&>p]:hover:bg-skin-fill [&>p]:border [&>p]:border-skin-accent [&>p]:transition\">",
        "[[title]]",
        "</LinkButton>"
      ],
      "fields": [
        {
          "name": "title",
          "title": "title",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "url",
          "title": "url",
          "type": "string",
          "single": true,
          "default": "FM_SELECTED_TEXT"
        },
        {
          "name": "title",
          "title": "title",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    }
  }
}