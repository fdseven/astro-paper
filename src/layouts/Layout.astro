---
import { SITE } from "@config";
import "@styles/base.css";
import { ViewTransitions } from "astro:transitions";

const googleSiteVerification = import.meta.env.PUBLIC_GOOGLE_SITE_VERIFICATION;

export interface Props {
  title?: string;
  author?: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: string;
}

const {
  title = SITE.title,
  author = SITE.author,
  description = SITE.desc,
  ogImage = SITE.ogImage,
  canonicalURL = new URL(Astro.url.pathname, Astro.site).href,
} = Astro.props;

const socialImageURL = new URL(
  ogImage ?? SITE.ogImage ?? "og.png",
  Astro.url.origin
).href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- General Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={socialImageURL} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <style>
      @font-face {
          font-family: 'PremierLeague2024';
          src: url('https://www.pesmania.web.id/assets/fonts/PremierLeague2024.woff') format('woff'),
              url('https://www.pesmania.web.id/assets/fonts/PremierLeague2024.ttf') format('truetype');
          font-weight: normal;
          font-style: normal;
          font-display: swap;
      }
      @font-face {
          font-family: 'PremierLeague';
          src: url('https://www.pesmania.web.id/assets/fonts/PremierLeague-Regular.eot');
          src: url('https://www.pesmania.web.id/assets/fonts/PremierLeague-Regular.eot?#iefix') format('embedded-opentype'),
              url('https://www.pesmania.web.id/assets/fonts/PremierLeague-Regular.woff') format('woff'),
              url('https://www.pesmania.web.id/assets/fonts/PremierLeague-Regular.ttf') format('truetype');
          font-weight: 400;
          font-style: normal;
          font-display: swap;
      }
      @font-face {
          font-family: 'PremierLeague';
          src: url('https://www.pesmania.web.id/assets/fonts/PremierLeague-Heavy.eot');
          src: url('https://www.pesmania.web.id/assets/fonts/PremierLeague-Heavy.eot?#iefix') format('embedded-opentype'),
              url('https://www.pesmania.web.id/assets/fonts/PremierLeague-Heavy.woff') format('woff'),
              url('https://www.pesmania.web.id/assets/fonts/PremierLeague-Heavy.ttf') format('truetype');
          font-weight: 900;
          font-style: normal;
          font-display: swap;
      }
      @font-face {
          font-family: 'PremierLeague';
          src: url('https://www.pesmania.web.id/assets/fonts/PremierLeague-Bold.eot');
          src: url('https://www.pesmania.web.id/assets/fonts/PremierLeague-Bold.eot?#iefix') format('embedded-opentype'),
              url('https://www.pesmania.web.id/assets/fonts/PremierLeague-Bold.woff') format('woff'),
              url('https://www.pesmania.web.id/assets/fonts/PremierLeague-Bold.ttf') format('truetype');
          font-weight: bold;
          font-style: normal;
          font-display: swap;
      }
    </style>
    <meta name="theme-color" content="" />

    {
      // If PUBLIC_GOOGLE_SITE_VERIFICATION is set in the environment variable,
      // include google-site-verification tag in the heading
      // Learn more: https://support.google.com/webmasters/answer/9008080#meta_tag_verification&zippy=%2Chtml-tag
      googleSiteVerification && (
        <meta
          name="google-site-verification"
          content={googleSiteVerification}
        />
      )
    }

    <ViewTransitions />

    <script is:inline src="/toggle-theme.js"></script>
  </head>
  <body>
    <slot />
  </body>
</html>
